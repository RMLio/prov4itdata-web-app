

html
    head
        title= "DAPSI TRANSFER"
        style
            include css/transfer.css

        script(async defer src="https://solid.github.io/solid-auth-client/dist/solid-auth-client.bundle.js")

        script
            include js/transfer.js

    body
        h1="TRANSFER"

        div(id="div_access_token" class="box")
            div(class="boxheader")

                p Provider:
                div(class="boxheader")
                    <code id="code_provider" class="barcode">#{PROVIDER}</code>

        div(id="div_solid" class="box")
            div(class="boxheader")
                p Solid
            div(class="boxheader")
                <pre id="solid_username" class="barcode"></pre>

            div
                button(id="btn_auth_solid" class="button solid") Auth. Solid
                button(id="btn_fetch_from_solid" class="button solid") Fetch <b><code>#{PROVIDER}.ttl</code></b>
                button(id="btn_post_to_solid" class="button solid") Store in <b><code>#{PROVIDER}.ttl</code></b>
                button(id="btn_create_datafile_on_solid" class="button solid") Create <b><code>#{PROVIDER}.ttl</code></b>
                button(id="btn_delete_from_solid" class="button solid") Delete <b><code>#{PROVIDER}.ttl</code></b>

            div(class="boxheader")
                p Transfer pipeline
                button(id="btn_execute_mapping" class="button") Execute RML Mapping



        div(id="div_rules" class="box")
            div(class="boxheader")
                p RML RULES (<code id="code_filename_rml_mapping">#{RML_RULES_FILENAME}</code>)
                button(id="btn_download_RML_rules" class="button") Download

            pre(id="pre_rules") #{RML_RULES}

        div(id="div_output" class="box")
            div(class="boxheader")
                p GENERATED RDF
                button(id="btn_download_RDF" class="button") Download

            pre(id="pre_output")

        div(id="div_provenance" class="box")
            div(class="boxheader")
                p PROVENANCE
                button(id="btn_download_provenance" class="button") Download

            pre(id="pre_provenance")

        div(id="div_solidpod_data" class="box")
            div(class="boxheader")
                p Solid Pod Data
                pre(id="pre_solidpod_data")